<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOGS" value="/opt/sync-app-log"/>
    <property name="LOG_FILE_NAME" value="sync-app-api"/>

    <!-- Define the JSON encoder for log events -->
